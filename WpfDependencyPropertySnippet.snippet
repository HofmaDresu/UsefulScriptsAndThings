<?xml version="1.0" encoding="utf-8"?>  
<CodeSnippets  
    xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">  
    <CodeSnippet Format="1.0.0">  
        <Header>  
            <Title>WPF DependencyProperty</Title>  
            <Shortcut>dprop</Shortcut>
            <Description>Creates a WPF-style DependencyProperty</Description>
        </Header>  
        <Snippet>  
            <Declarations>
                <Literal>
                    <ID>Type</ID>
                    <Default>int</Default>
                </Literal>
                <Literal>
                    <ID>ContainingClass</ID>
                    <Default>ContainingClass</Default>
                </Literal>
                <Literal>
                    <ID>Public</ID>
                    <Default>MyVar</Default>
                </Literal>
            </Declarations>
            <Code Language="CSharp">  
                <![CDATA[private $Type$ $Private$;
                    public $Type$ $Public$
                    {
                        get => $Private$;
                        set
                        {
                            $Private$ = value;
                            RaisePropertyChanged();
                        }
                    }
                    
                    public static readonly DependencyProperty $Public$Property = DependencyProperty.Register("$Public$", typeof($Type$), typeof($ContainingClass$));
                    public bool $Public$
                    {
                        get { return ($Type$)GetValue($Public$Property); }
                        set { SetValue($Public$Property, value); }
                    }                    
                ]]>  
            </Code>  
        </Snippet>  
    </CodeSnippet>  
</CodeSnippets>  
